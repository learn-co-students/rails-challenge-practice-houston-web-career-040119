<%= form_for @building do |f| %>
	<ul>
		<% if flash[:errors] %>
			<% flash[:errors].each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		<% end %>
	</ul>

<p>Building Details</p>
	<%= f.label :name %>
  <%= f.text_field :name %><br>
  
  <%= f.label :country %> <%= f.text_field :country %><br>

  <%= f.label :address %> <%= f.text_field :address %><br>

  <%= f.label :rent_per_floor %> <%= f.text_field :rent_per_floor %><br>

  <%= f.label :number_of_floors %> <%= f.text_field :number_of_floors %><br>

	<br>


	<%= f.submit %>
<% end %>
